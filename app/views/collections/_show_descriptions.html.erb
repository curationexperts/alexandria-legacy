<dl class="dl-horizontal  dl-invert">
  <% document_show_fields(@presenter.solr_document).each do |solr_fname, field| %>
    <% if should_render_show_field? @presenter.solr_document, field %>
      <dt class="blacklight-<%= solr_fname.parameterize %>">
        <%= render_document_show_field_label @presenter.solr_document, field: solr_fname %>
      </dt>
      <dd class="blacklight-<%= solr_fname.parameterize %>">
        <%= render_document_show_field_value @presenter.solr_document, field: solr_fname %>
      </dd>
    <% end %>
  <% end %>
</dl>
