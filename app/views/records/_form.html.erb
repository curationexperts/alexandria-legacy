<%= simple_form_for form, url: record_form_action_url(form), html: { class: 'editor' } do |f| %>
  <div id="descriptions_display">
    <%= render 'records/form_header' %>
    <div class="well">
      <%= render_edit_field_partial(:title, f: f) %>
      <%= render_edit_field_partial(:alternative, f: f) %>
      <%= f.input :ark, disabled: true %>
      <% (f.object.terms - [:title, :alternative]).each do |term| %>
        <%= render_edit_field_partial(term, f: f) %>
      <% end %>
      <%= f.input :record_origin, disabled: true, as: :multi_value_readonly %>
    </div> <!-- /well -->
  </div>
  <%= hidden_field_tag :type, params[:type] %>
  <div class="form-actions">
    <div class="primary-actions">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to t(:'helpers.action.cancel'), main_app.root_path, class: 'btn btn-link' %>
    </div>
  </div>
<% end %>

