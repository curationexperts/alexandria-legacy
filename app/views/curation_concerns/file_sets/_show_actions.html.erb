<% # Overridden to add download MP3 and remove edit link %>
  <div class="form-actions">
    <%= link_to "Download MP3 File", main_app.download_path(presenter, file: 'mp3', dl: 'true'), class: 'btn btn-default' %>
    <% if parent.is_a?(AudioRecording) && can?(:download_original, presenter.solr_document.to_model) %>
      <%= link_to "Download this File", main_app.download_path(presenter), class: 'btn btn-default' %>
    <% end %>

    <%= link_to "Back to #{parent.human_readable_type}", parent_path(parent), class: 'btn btn-default' %>
  </div>
