<div class="page-header-splash">
  <div class="page-header-container">

    <div class="top-links">
      <div class="pull-right login-link">
        <%= render 'shared/login_link' %>
      </div>

      <p>
        <%= link_to 'Bookmarks', bookmarks_path %>
        <%= link_to 'History', search_history_path %>
      </p>
    </div>
    <div class='clearfix'></div>


    <div class="large-logo">
      <%= link_to image_tag("ADRL_Large_Logo_805x186.png", { alt: "ADRL Logo" }), root_path, { title: "ADRL Home" } %>
    </div>

    <div id="splash-search-bar">
      <%= render 'catalog/search_form' %>
    </div>

    <section id="browse-by">
      Or browse by
      <%= link_to 'Collection', collections.collections_path %>,
      <%= link_to 'Creator', catalog_facet_path(Solrizer.solr_name('creator_label', :facetable)) %>,
      <%= link_to 'Format', catalog_facet_path(Solrizer.solr_name('human_readable_type', :facetable)) %>,
      or
      <%= link_to 'Topic', catalog_facet_path(Solrizer.solr_name('lc_subject_label', :facetable)) %>
    </section>

  </div>
</div>
